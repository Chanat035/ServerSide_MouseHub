<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Account Settings</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #0d0d0d;
        color: #f1c40f;
        font-family: "Poppins", sans-serif;
      }
      h1 {
        font-weight: 600;
        color: #f1c40f;
      }
      .card {
        background-color: #1a1a1a;
        border: 1px solid #333;
        border-radius: 12px;
        color: #fff;
      }
      .card-header.bg-primary {
        background-color: #f1c40f !important;
        color: #000 !important;
      }
      .form-control {
        background-color: #111;
        border: 1px solid #444;
        color: #f1c40f;
      }
      .form-control:focus {
        background-color: #111;
        border-color: #f1c40f;
        box-shadow: 0 0 5px #f1c40f33;
        color: #fff;
      }
      .btn-primary {
        background-color: #f1c40f;
        color: #000;
        border: none;
        font-weight: 600;
      }
      .btn-primary:hover {
        background-color: #d4ac0d;
        color: #000;
      }
      .btn-danger {
        background-color: #c0392b;
        border: none;
        font-weight: 600;
      }
      .btn-danger:hover {
        background-color: #e74c3c;
      }
      .btn-outline-warning {
        border-color: #f1c40f;
        color: #f1c40f;
      }
      .btn-outline-warning:hover {
        background-color: #f1c40f;
        color: #000;
      }
      .btn-outline-danger {
        border-color: #c0392b;
        color: #c0392b;
      }
      .btn-outline-danger:hover {
        background-color: #c0392b;
        color: #fff;
      }
      .container {
        max-width: 600px;
      }
    </style>
  </head>

  <body>
    <%- include('partials/header') %>

    <div class="container py-5 mt-5">
      <h1 class="text-center mb-4">⚙️ Account Settings</h1>

      <!-- ปุ่มสลับ -->
      <div class="text-center mb-5">
        <a href="/settings?show=detail" class="btn btn-outline-warning me-2"
          >Account Detail</a
        >
        <a href="/settings?show=change" class="btn btn-outline-warning me-2"
          >Change Password</a
        >
        <a href="/settings?show=delete" class="btn btn-outline-danger"
          >Delete Account</a
        >
      </div>

      <% if (show === 'detail') { %>
      <!-- ✅ Account Detail -->
      <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-dark">Account Detail</div>
        <div class="card-body" id="accountDetail">
          <p class="text-center">Loading profile...</p>
        </div>
      </div>
      <% } else if (show === 'change') { %>
      <!-- Change Password -->
      <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-dark">Change Password</div>
        <div class="card-body">
          <form id="changePasswordForm">
            <div class="mb-3">
              <label>Old Password</label>
              <input
                type="password"
                name="oldPassword"
                class="form-control"
                placeholder="ใส่รหัสผ่านเดิม"
                required
              />
            </div>
            <div class="mb-3">
              <label>New Password</label>
              <input
                type="password"
                name="newPassword"
                class="form-control"
                placeholder="ใส่รหัสผ่านใหม่"
                required
              />
            </div>
            <div class="mb-3">
              <label>Confirm Password</label>
              <input
                type="password"
                name="confirmPassword"
                class="form-control"
                placeholder="ยืนยันรหัสผ่านใหม่"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">
              Change Password
            </button>
          </form>
        </div>
      </div>
      <% } else if (show === 'delete') { %>
      <!-- Delete Account -->
      <div class="card shadow">
        <div class="card-header bg-danger text-white">Delete Account</div>
        <div class="card-body">
          <form id="deleteUserForm">
            <div class="mb-3">
              <label>Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="ใส่รหัสผ่าน"
                required
              />
            </div>
            <div class="mb-3">
              <label>Type 'Confirm' to delete</label>
              <input
                type="text"
                name="confirmMessage"
                class="form-control"
                placeholder="Confirm"
                required
              />
            </div>
            <button type="submit" class="btn btn-danger w-100 mt-3">
              Delete My Account
            </button>
          </form>
        </div>
      </div>
      <% } %>
    </div>

    <!-- ✅ Script ส่วน Account Detail -->
    <% if (show === 'detail') { %>
    <script>
      document.addEventListener("DOMContentLoaded", async () => {
        try {
          const res = await fetch("/api/profile", {
            method: "GET",
            headers: { "Content-Type": "application/json" },
            credentials: "include",
          });

          const data = await res.json();
          const container = document.getElementById("accountDetail");

          if (!res.ok) {
            container.innerHTML = `<p class="text-danger text-center">${
              data.message || "Error loading profile"
            }</p>`;
            return;
          }

          container.innerHTML = `
            <div class="mb-3"><strong>Username:</strong> ${data.username}</div>
            <div class="mb-3"><strong>Email:</strong> ${data.email}</div>
            <div class="mb-3"><strong>Phone:</strong> ${data.phone}</div>
            <div class="mb-3"><strong>Address:</strong> ${data.address}</div>
            <div class="mb-3"><strong>Balance:</strong> ${
              data.balance ?? 0
            } ฿</div>
          `;
        } catch (err) {
          document.getElementById(
            "accountDetail"
          ).innerHTML = `<p class="text-danger text-center">Error: ${err.message}</p>`;
        }
      });
    </script>
    <% } %>

    <script>
      const changeForm = document.getElementById("changePasswordForm");
      const deleteForm = document.getElementById("deleteUserForm");

      if (changeForm) {
        changeForm.addEventListener("submit", async (e) => {
          e.preventDefault();
          const data = Object.fromEntries(new FormData(changeForm));
          data.name = "<%= user.username %>";

          try {
            const res = await fetch("/api/changePassword", {
              method: "PATCH",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(data),
              credentials: "include",
            });
            const json = await res.json();
            alert(json.message);
          } catch (err) {
            alert("Error: " + err.message);
          }
        });
      }

      if (deleteForm) {
        deleteForm.addEventListener("submit", async (e) => {
          e.preventDefault();
          if (!confirm("Are you sure you want to delete your account?")) return;
          const data = Object.fromEntries(new FormData(deleteForm));
          data.name = "<%= user.username %>";

          try {
            const res = await fetch("/api/user", {
              method: "DELETE",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(data),
              credentials: "include",
            });
            const json = await res.json();
            alert(json.message);
            if (res.ok) window.location.href = "/";
          } catch (err) {
            alert("Error: " + err.message);
          }
        });
      }
    </script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </body>
</html>
