<head>
  <meta charset="UTF-8" />
  <title>Admin | MouseHub</title>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
  />

  <!-- ✅ copy style จาก adminHeader -->
  <link rel="stylesheet" href="/admin-header.css" />
</head>

<nav class="navbar-admin">
  <!-- โลโก้ -->
  <a href="/" class="navbar-brand" id="homeLink">🐭 MouseHub</a>

  <!-- ช่องค้นหา -->
  <div class="search-container">
    <input
      type="text"
      id="searchBox"
      class="search-box"
      placeholder="ค้นหา..."
    />
    <i class="bi bi-search"></i>
  </div>

  <!-- ส่วนผู้ใช้ -->
  <div class="user-dropdown">
    <% if (user) { %>
    <button class="user-toggle" id="userToggle">
      👋 สวัสดี, <%= user.username %>
    </button>
    <div class="dropdown-menu" id="userMenu">
      <span class="dropdown-item-text text-warning fw-semibold">
        ยอดคงเหลือ : <%= user.balance %> ฿
      </span>
      <a class="dropdown-item" href="/order">Orders</a>
      <a class="dropdown-item" href="/settings">Setting</a>
      <button type="button" class="dropdown-item" id="logoutBtn">Logout</button>
    </div>
    <% } else { %>
    <a href="#" class="user-toggle">
      <i class="bi bi-person"></i>
    </a>
    <% } %>
  </div>
</nav>

<!-- โหลดสคริปต์ -->
<script src="/admin-header.js"></script>
