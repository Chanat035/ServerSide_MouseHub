<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Products</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #121212;
            color: #f1c40f;
            font-family: 'Prompt', sans-serif;
            margin-top: 20px;
        }

        /* ===== Sidebar ===== */
        .sidebar {
            background-color: #1e1e1e;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
            position: sticky;
            top: 100px;
            /* ให้ sidebar อยู่กับที่เวลาสกรอลล์ */
        }

        .sidebar h5 {
            color: #f1c40f;
            font-weight: 600;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

        .sidebar .nav-link {
            color: #b3b3b3;
            font-weight: 500;
            padding: 8px 0;
            transition: 0.3s;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: #f1c40f;
            transform: translateX(3px);
        }

        /* ===== Product Card ===== */
        .product-card {
            background-color: #1e1e1e;
            border-radius: 16px;
            overflow: hidden;
            transition: transform 0.2s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            position: relative;
            height: 100%;
        }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.6);
        }

        .product-card img {
            width: 100%;
            height: 230px;
            object-fit: contain;
            background-color: #fff;
            padding: 10px;
            border-bottom: 1px solid #333;
        }

        .product-card-body {
            text-align: center;
            padding: 15px 10px 60px;
            flex-grow: 1;
        }

        .pro-title {
            font-size: 16px;
            font-weight: 600;
            color: #f1c40f;
            margin-bottom: 8px;
            min-height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .price {
            font-size: 15px;
            font-weight: 600;
            color: #ffda55;
        }

        /* ===== Add to Cart Button ===== */
        .adtocart {
            background: #f1c40f;
            color: #121212;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            text-align: center;
            line-height: 50px;
            font-size: 22px;
            position: absolute;
            bottom: 15px;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
            transition: all 0.3s ease;
        }

        .adtocart:hover {
            background: #ffda55;
            transform: translateX(-50%) scale(1.1);
        }

        /* ===== Layout Adjustments ===== */
        .container {
            margin-top: 40px;
            margin-bottom: 60px;
        }

        .row.align-items-start {
            align-items: flex-start !important;
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
        }

        .product-list .col-md-4 {
            display: flex;
        }

        @media (max-width: 768px) {
            .sidebar {
                margin-bottom: 20px;
                position: static;
                /* ปิด sticky ในจอเล็ก */
            }

            .product-card img {
                height: 180px;
            }
        }
    </style>
</head>

<body>

    <%- include('partials/header') %>
        <%- include('partials/login') %>
            <%- include('partials/register') %>

                <div class="container">
                    <!-- ✅ ปรับ row ให้ align-items-start ป้องกัน sidebar ยืด -->
                    <div class="row align-items-start">
                        <!-- Sidebar -->
                        <div class="col-md-3 mb-4">
                            <div class="sidebar">
                                <h5>Category</h5>
                                <ul class="nav flex-column prod-cat">
                                    <li><a href="#" class="nav-link" data-category="Mouse">Mouse</a></li>
                                    <li><a href="#" class="nav-link" data-category="Mousepad">MousePad</a></li>
                                    <li><a href="#" class="nav-link" data-category="Mousefeet">MouseFeet</a></li>
                                    <li><a href="#" class="nav-link active" data-category="">All</a></li>
                                </ul>
                            </div>
                        </div>

                        <!-- Product List -->
                        <div class="col-md-9">
                            <div class="row product-list g-4"></div>
                        </div>
                    </div>
                </div>

                <script>
                    const API_URL = "/api/filther";

                    async function fetchProducts(category = "") {
                        const url = category ? `${API_URL}?category=${encodeURIComponent(category)}` : API_URL;
                        const res = await fetch(url);

                        if (!res.ok) {
                            console.error("Error loading products:", res.status);
                            return;
                        }

                        const data = await res.json();
                        const products = Array.isArray(data) ? data : data.products;
                        renderProducts(products || []);

                        // set active sidebar
                        document.querySelectorAll(".prod-cat a").forEach(el => {
                            el.classList.toggle("active", el.dataset.category === category);
                        });
                    }

                    function renderProducts(products) {
                        const productList = document.querySelector(".product-list");
                        productList.innerHTML = "";

                        if (!products.length) {
                            productList.innerHTML = `<p class="text-muted text-center">ไม่มีสินค้าในหมวดนี้</p>`;
                            return;
                        }

                        products.forEach(p => {
                            const card = `
      <div class="col-md-4 d-flex">
        <div class="product-card w-100 position-relative">
          <img src="${p.imgUrl || 'https://www.bootdey.com/image/250x220/FFB6C1/000000'}" alt="${p.productName}">
          <div class="product-card-body">
            <h4 class="pro-title">${p.productName || 'ไม่มีชื่อสินค้า'}</h4>
            <p class="price">${p.price ? p.price + ' ฿' : 'ราคาไม่ระบุ'}</p>
          </div>
          <a href="#" class="adtocart"><i class="bi bi-cart"></i></a>
        </div>
      </div>
    `;
                            productList.innerHTML += card;
                        });
                    }

                    // Sidebar filter click
                    document.querySelectorAll(".prod-cat a").forEach(a => {
                        a.addEventListener("click", e => {
                            e.preventDefault();
                            const category = a.dataset.category || "";
                            fetchProducts(category);
                        });
                    });

                    // Header dropdown click
                    document.querySelectorAll(".dropdown-item").forEach(item => {
                        item.addEventListener("click", e => {
                            e.preventDefault();
                            const category = item.dataset.category || "";
                            fetchProducts(category);
                        });
                    });

                    // อ่าน category จาก URL query
                    function getCategoryFromURL() {
                        const params = new URLSearchParams(window.location.search);
                        return params.get("category") || "";
                    }

                    // โหลดสินค้าเมื่อเปิดหน้า /products
                    window.addEventListener("DOMContentLoaded", () => {
                        const category = getCategoryFromURL();
                        fetchProducts(category);
                    });
                </script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>