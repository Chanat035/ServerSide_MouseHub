<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Products</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #121212;
            color: #f1c40f;
            font-family: 'Prompt', sans-serif;
            margin-top: 20px;
        }

        /* Sidebar */
        .sidebar {
            background-color: #1e1e1e;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
            position: sticky;
            top: 100px;
        }

        .sidebar h5 {
            color: #f1c40f;
            font-weight: 600;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

        .sidebar .nav-link {
            color: #b3b3b3;
            font-weight: 500;
            padding: 8px 0;
            transition: 0.3s;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: #f1c40f;
            transform: translateX(3px);
        }

        /* Product Card */
        .product-card {
            background-color: #1e1e1e;
            border-radius: 16px;
            overflow: hidden;
            transition: transform 0.2s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            position: relative;
            height: 100%;
        }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.6);
        }

        .product-card img {
            width: 100%;
            height: 230px;
            object-fit: contain;
            background-color: #fff;
            padding: 10px;
            border-bottom: 1px solid #333;
        }

        .product-card-body {
            text-align: center;
            padding: 15px 10px 60px;
            flex-grow: 1;
        }

        .pro-title {
            font-size: 16px;
            font-weight: 600;
            color: #f1c40f;
            margin-bottom: 8px;
            min-height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .price {
            font-size: 15px;
            font-weight: 600;
            color: #ffda55;
        }

        .adtocart {
            background: #f1c40f;
            color: #121212;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            text-align: center;
            line-height: 50px;
            font-size: 22px;
            position: absolute;
            bottom: 15px;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
            transition: all 0.3s ease;
        }

        .adtocart:hover {
            background: #ffda55;
            transform: translateX(-50%) scale(1.1);
        }

        /* Layout Adjustments */
        .container {
            margin-top: 40px;
            margin-bottom: 60px;
        }

        .row.align-items-start {
            align-items: flex-start !important;
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
        }

        .product-list .col-md-4 {
            display: flex;
        }

        .text-muted.text-center {
            color: #f1c40f !important;
            font-size: 1.25rem;
            font-weight: 600;
            margin-top: 20px;
        }

        #searchInput {
            width: 220px;
            float: right;
            background-color: #1e1e1e;
            color: #fff;
            border: 1px solid #444;
        }

        .form-control::placeholder {
            color: white;
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>
        <%- include('partials/login') %>
            <%- include('partials/register') %>

                <div class="container">
                    <div class="row align-items-start">
                        <!-- Search -->
                        <div class="mb-3 col-12">
                            <input type="text" id="searchInput" class="form-control" placeholder="Search">
                        </div>

                        <!-- Sidebar -->
                        <div class="col-md-3 mb-4">
                            <div class="sidebar">
                                <h5>Category</h5>
                                <ul class="nav flex-column prod-cat">
                                    <li><a href="#" class="nav-link" data-category="Mouse">Mouse</a></li>
                                    <li><a href="#" class="nav-link" data-category="Mousepad">MousePad</a></li>
                                    <li><a href="#" class="nav-link" data-category="Mousefeet">MouseFeet</a></li>
                                    <li><a href="#" class="nav-link active" data-category="">All</a></li>
                                </ul>
                            </div>
                        </div>

                        <!-- Product List -->
                        <div class="col-md-9">
                            <div class="row product-list g-4"></div>
                        </div>
                    </div>
                </div>

                <script>
                    const API_FILTER = "/api/filther";
                    const API_SEARCH = "/api/search";

                    // โหลดสินค้าตาม category
                    async function fetchProducts(category = "") {
                        const url = category ? `${API_FILTER}?category=${encodeURIComponent(category)}` : API_FILTER;
                        const res = await fetch(url);
                        if (!res.ok) return renderProducts([]);

                        const data = await res.json();
                        const products = data.products || [];
                        renderProducts(products);

                        // set active sidebar
                        document.querySelectorAll(".prod-cat a").forEach(el => {
                            el.classList.toggle("active", el.dataset.category === category);
                        });
                    }

                    // Render product card
                    function renderProducts(products) {
                        const productList = document.querySelector(".product-list");
                        productList.innerHTML = "";

                        if (!products.length) {
                            productList.innerHTML = `<p class="text-muted text-center">ไม่มีสินค้าในหมวดนี้</p>`;
                            return;
                        }

                        products.forEach(p => {
                            const card = document.createElement("div");
                            card.className = "col-md-4 d-flex";

                            card.innerHTML = `
        <div class="product-card w-100 position-relative">
            <img src="${p.imgUrl || 'https://www.bootdey.com/image/250x220/FFB6C1/000000'}" alt="${p.productName}">
            <div class="product-card-body">
                <h4 class="pro-title">${p.productName || 'ไม่มีชื่อสินค้า'}</h4>
                <p class="price">${p.price ? p.price + ' ฿' : 'ราคาไม่ระบุ'}</p>
            </div>
        </div>
    `;

                            const productCard = card.querySelector(".product-card");

                            // คลิกที่ card -> ไปหน้า productDetail
                            productCard.addEventListener("click", () => {
                                if (!p.productName) return;
                                window.location.href = `/productDetail?name=${encodeURIComponent(p.productName)}`;
                            });

                            productList.appendChild(card);
                        });
                    }
                    // Sidebar click
                    document.querySelectorAll(".prod-cat a").forEach(a => {
                        a.addEventListener("click", e => {
                            e.preventDefault();
                            const category = a.dataset.category || "";
                            fetchProducts(category);
                        });
                    });

                    // Search
                    const searchInput = document.getElementById('searchInput');
                    searchInput.addEventListener('input', e => {
                        const query = e.target.value.trim();
                        if (!query) return fetchProducts(); // โหลดทั้งหมดถ้า input ว่าง

                        fetch(`${API_SEARCH}?name=${encodeURIComponent(query)}`)
                            .then(res => res.json())
                            .then(data => renderProducts(data.products || []))
                            .catch(err => console.error(err));
                    });

                    // โหลดสินค้าครั้งแรก
                    window.addEventListener("DOMContentLoaded", () => {
                        const params = new URLSearchParams(window.location.search);
                        const category = params.get("category") || "";
                        fetchProducts(category);
                    });
                </script>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>