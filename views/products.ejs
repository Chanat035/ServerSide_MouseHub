<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Products</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@400;500;600&display=swap" rel="stylesheet" />

    <style>
        body {
            background-color: #121212;
            color: #f1c40f;
            font-family: "Prompt", sans-serif;
            margin-top: 20px;
        }

        /* ===== Sidebar ===== */
        .sidebar {
            background-color: #1e1e1e;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
            position: sticky;
            top: 100px;
            /* ‡πÉ‡∏´‡πâ sidebar ‡∏≠‡∏¢‡∏π‡πà‡∏Å‡∏±‡∏ö‡∏ó‡∏µ‡πà‡πÄ‡∏ß‡∏•‡∏≤‡∏™‡∏Å‡∏£‡∏≠‡∏•‡∏•‡πå */
        }

        .sidebar h5 {
            color: #f1c40f;
            font-weight: 600;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

        .sidebar .nav-link {
            color: #b3b3b3;
            font-weight: 500;
            padding: 8px 0;
            transition: 0.3s;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: #f1c40f;
            transform: translateX(3px);
        }

        /* ===== Product Card ===== */
        .product-card {
            background-color: #1e1e1e;
            border-radius: 16px;
            overflow: hidden;
            transition: transform 0.2s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            position: relative;
            height: 100%;
        }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.6);
        }

        .product-card img {
            width: 100%;
            height: 230px;
            object-fit: contain;
            background-color: #fff;
            padding: 10px;
            border-bottom: 1px solid #333;
        }

        .product-card-body {
            text-align: center;
            padding: 15px 10px 60px;
            flex-grow: 1;
        }

        .pro-title {
            font-size: 16px;
            font-weight: 600;
            color: #f1c40f;
            margin-bottom: 8px;
            min-height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .price {
            font-size: 15px;
            font-weight: 600;
            color: #ffda55;
        }

        /* ===== Add to Cart Button ===== */
        .adtocart {
            background: #f1c40f;
            color: #121212;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            text-align: center;
            line-height: 50px;
            font-size: 22px;
            position: absolute;
            bottom: 15px;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
            transition: all 0.3s ease;
        }

        .adtocart:hover {
            background: #ffda55;
            transform: translateX(-50%) scale(1.1);
        }

        /* ===== Layout Adjustments ===== */
        .container {
            margin-top: 40px;
            margin-bottom: 60px;
        }

        .row.align-items-start {
            align-items: flex-start !important;
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
        }

        .product-list .col-md-4 {
            display: flex;
        }

        #searchInput {
            background-color: #1e1e1e;
            /* ‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡πÄ‡∏Ç‡πâ‡∏°‡πÉ‡∏´‡πâ‡πÄ‡∏Ç‡πâ‡∏≤‡∏Å‡∏±‡∏ö‡∏ò‡∏µ‡∏° */
            color: #ffffff;
            /* ‡∏™‡∏µ‡∏ï‡∏±‡∏ß‡∏≠‡∏±‡∏Å‡∏©‡∏£ */
            border: 1px solid #555;
            /* ‡∏õ‡∏£‡∏±‡∏ö‡πÄ‡∏™‡πâ‡∏ô‡∏Ç‡∏≠‡∏ö‡∏ñ‡πâ‡∏≤‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£ */
        }

        /* ‡∏™‡∏µ placeholder ‡πÉ‡∏´‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏™‡∏µ‡∏Ç‡∏≤‡∏ß‡∏≠‡πà‡∏≠‡∏ô */
        #searchInput::placeholder {
            color: #cccccc;
            opacity: 1;
            /* ‡∏ö‡∏±‡∏á‡∏Ñ‡∏±‡∏ö‡πÉ‡∏´‡πâ‡∏™‡∏µ‡πÅ‡∏™‡∏î‡∏á‡∏ä‡∏±‡∏î */
        }

        @media (max-width: 768px) {
            .sidebar {
                margin-bottom: 20px;
                position: static;
                /* ‡∏õ‡∏¥‡∏î sticky ‡πÉ‡∏ô‡∏à‡∏≠‡πÄ‡∏•‡πá‡∏Å */
            }

            .product-card img {
                height: 180px;
            }
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>
        <%- include('partials/login') %>
            <%-include('partials/register') %>

                <div class="container">
                    <div class="d-flex justify-content-end mb-3">
                        <input type="text" id="searchInput" class="form-control w-25" placeholder="Search">
                    </div>
                    <!-- ‚úÖ ‡∏õ‡∏£‡∏±‡∏ö row ‡πÉ‡∏´‡πâ align-items-start ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô sidebar ‡∏¢‡∏∑‡∏î -->
                    <div class="row align-items-start">
                        <!-- Sidebar -->
                        <div class="col-md-3 mb-4">
                            <div class="sidebar">
                                <h5>Category</h5>
                                <ul class="nav flex-column prod-cat">
                                    <li>
                                        <a href="#" class="nav-link" data-category="Mouse">Mouse</a>
                                    </li>
                                    <li>
                                        <a href="#" class="nav-link" data-category="Mousepad">MousePad</a>
                                    </li>
                                    <li>
                                        <a href="#" class="nav-link" data-category="Mousefeet">MouseFeet</a>
                                    </li>
                                    <li>
                                        <a href="#" class="nav-link active" data-category="">All</a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Product List -->
                        <div class="col-md-9">
                            <div class="row product-list g-4"></div>
                        </div>
                    </div>
                </div>

                <script>
  const API_URL = "/api/filther";
  const SEARCH_URL = "/api/search";

  // ‚úÖ ‡πÇ‡∏´‡∏•‡∏î‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤ (‡∏ï‡∏≤‡∏°‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà)
  async function fetchProducts(category = "") {
    const url = category
      ? `${API_URL}?category=${encodeURIComponent(category)}`
      : API_URL;

    try {
      const res = await fetch(url);
      if (!res.ok) throw new Error(`HTTP ${res.status}`);

      const data = await res.json();
      const products = Array.isArray(data) ? data : data.products;
      window.allProducts = products || [];

      renderProducts(window.allProducts);
      updateActiveCategory(category);
    } catch (err) {
      console.error("Error loading products:", err);
    }
  }

  // ‚úÖ ‡πÅ‡∏™‡∏î‡∏á‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤
  function renderProducts(products) {
    const productList = document.querySelector(".product-list");
    productList.innerHTML = "";

    if (!products.length) {
      productList.innerHTML = `
        <p class="text-center" style="color:#ffda55; font-size:1.5rem; font-weight:600;">
          ‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡πÉ‡∏ô‡∏´‡∏°‡∏ß‡∏î‡∏ô‡∏µ‡πâ
        </p>`;
      return;
    }

    products.forEach((p) => {
      const id = p._id || p.id || p.productId || "";
      productList.innerHTML += `
        <div class="col-md-4 d-flex">
          <div class="product-card w-100 position-relative" data-id="${id}">
            <img src="${p.imgUrl || "https://www.bootdey.com/image/250x220/FFB6C1/000000"}" alt="${p.productName}">
            <div class="product-card-body">
              <h4 class="pro-title">${p.productName || "‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ä‡∏∑‡πà‡∏≠‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤"}</h4>
              <p class="price">${p.price ? p.price + " ‡∏ø" : "‡∏£‡∏≤‡∏Ñ‡∏≤‡πÑ‡∏°‡πà‡∏£‡∏∞‡∏ö‡∏∏"}</p>
            </div>
            <a href="#" class="adtocart"><i class="bi bi-cart"></i></a>
          </div>
        </div>`;
    });
  }

  // ‚úÖ update sidebar active
  function updateActiveCategory(category) {
    document.querySelectorAll(".prod-cat a").forEach((el) => {
      el.classList.toggle("active", el.dataset.category === category);
    });
  }

  // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏•‡∏á‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤ / ‡πÑ‡∏õ‡∏´‡∏ô‡πâ‡∏≤ detail
  document.addEventListener("click", async (e) => {
    const addBtn = e.target.closest(".adtocart");
    const card = e.target.closest(".product-card");

    // üõí Add to cart
    if (addBtn && card) {
      e.preventDefault();
      const productId = card.dataset.id;
      if (!productId) return;

      try {
        const res = await fetch("/api/addToCart", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          credentials: "include",
          body: JSON.stringify({ productId, quantity: 1 }),
        });
        const result = await res.json();

        if (res.ok) alert("‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏•‡∏á‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤‡πÅ‡∏•‡πâ‡∏ß!");
        else if (res.status === 401)
          alert("‚ö†Ô∏è ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö‡∏Å‡πà‡∏≠‡∏ô‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡πÉ‡∏ô‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤");
        else alert(`‚ùå ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: ${result.message || "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î"}`);
      } catch (err) {
        console.error("Error adding to cart:", err);
        alert("‚ùå ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡πÑ‡∏î‡πâ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà");
      }
      return;
    }

    // üîç ‡πÑ‡∏õ‡∏´‡∏ô‡πâ‡∏≤ detail
    if (card && !addBtn) {
      const productId = card.dataset.id;
      if (productId) window.location.href = `/productdetail?id=${productId}`;
    }
  });

  // ‚úÖ Sidebar category filter
  document.querySelectorAll(".prod-cat a").forEach((a) => {
    a.addEventListener("click", (e) => {
      e.preventDefault();
      const category = a.dataset.category || "";
      fetchProducts(category);
    });
  });

  // ‚úÖ Header dropdown category
  document.querySelectorAll(".dropdown-item[data-category]").forEach((item) => {
    item.addEventListener("click", (e) => {
      e.preventDefault();
      const category = item.dataset.category || "";
      fetchProducts(category);
    });
  });

  // ‚úÖ ‡∏≠‡πà‡∏≤‡∏ô category ‡∏à‡∏≤‡∏Å URL
  function getCategoryFromURL() {
    const params = new URLSearchParams(window.location.search);
    return params.get("category") || "";
  }

  // ‚úÖ Debounce (‡∏´‡∏ô‡πà‡∏ß‡∏á‡πÄ‡∏ß‡∏•‡∏≤ search)
  function debounce(func, delay) {
    let timer;
    return function (...args) {
      clearTimeout(timer);
      timer = setTimeout(() => func.apply(this, args), delay);
    };
  }

  // ‚úÖ ‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤ (‡πÄ‡∏£‡∏µ‡∏¢‡∏Å backend)
  const searchInput = document.getElementById("searchInput");
  searchInput.addEventListener(
    "input",
    debounce(async () => {
      const keyword = searchInput.value.trim();

      if (!keyword) {
        renderProducts(window.allProducts || []);
        return;
      }

      try {
        const res = await fetch(`${SEARCH_URL}?name=${encodeURIComponent(keyword)}`);
        const data = await res.json();

        if (data.products) renderProducts(data.products);
        else renderProducts([]);
      } catch (err) {
        console.error("Error fetching products:", err);
      }
    }, 300) // üî∏ ‡∏´‡∏ô‡πà‡∏ß‡∏á 300ms ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡πÄ‡∏£‡∏µ‡∏¢‡∏Å API ‡∏ñ‡∏µ‡πà
  );

  // ‚úÖ ‡πÇ‡∏´‡∏•‡∏î‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÅ‡∏£‡∏Å
  window.addEventListener("DOMContentLoaded", () => {
    const category = getCategoryFromURL();
    fetchProducts(category);
  });
</script>

</body>

